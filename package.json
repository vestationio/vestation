    "stylelint": "^16.5.0",
    "stylelint-config-recess-order": "^5.0.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-svgr": "^4.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
